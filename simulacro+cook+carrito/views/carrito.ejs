<%- include("header", {}) %>

<div class="container">
    <h1>Carrito de la Compra</h1>
    <% if (cart && cart.length > 0) { %>
        <ul>
            <% cart.forEach(item => { %>
                <li>
                    <strong>Producto <%= item.productId || item.name %></strong> - 
                    Cantidad: <%= item.quantity %> x <%= item.price || 10 %> €
                </li>
            <% }) %>
        </ul>
        <form method="POST" action="/carrito/clear">
            <button type="submit" style="background-color: red; color: white;">Vaciar Carrito</button>
        </form>
    <% } else { %>
        <p>Tu carrito está vacío.</p>
    <% } %>
</div>

<%- include("footer", {}) %>
